# Root EditorConfig file
root = true

# Global settings (applies to all files)
[*]
charset = utf-8                  # Use UTF-8 encoding
end_of_line = lf                 # Unix-style line endings
indent_style = space             # Use spaces for indentation
indent_size = 4                  # Indent with 4 spaces
insert_final_newline = true      # Ensure files end with a newline
trim_trailing_whitespace = true  # Remove trailing whitespace

# Rules for Markdown files
[*.md]
trim_trailing_whitespace = false # Allow trailing whitespace for Markdown
indent_size = 2                  # Use 2 spaces for Markdown indentation

# Rules for JSON files
[*.json]
indent_size = 2                  # Use 2 spaces for JSON files
